.container{
   background-color: #fff;
   display: flex;
   flex-direction: column;
}
.head-image{
  width: 100%;
}
.author-date{
  flex-direction: row;
   margin-left: 30rpx;
   margin-top:20rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 180rpx;
  margin-left: -51rpx;
  margin-top: 20rpx;
}
.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color:#666;
}
.date{
    font-size: 24rpx;
    margin-left: 30rpx;
    vertical-align: middle;
    color:#999;
}
.const-text{
    font-size: 26rpx;
    margin-left: 30rpx;
    color:#999;
}
.title{
    margin-left:40rpx;
    font-size: 36rpx;
    font-weight:700;
    margin-top:30rpx;
    letter-spacing: 2px;
    color:#4b556c;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 40rpx;
  position: relative;
  z-index: 99;
}
.circle-img image{
    width:90rpx;
    height: 90rpx
}
.share-img{
  margin-left: 20rpx;
}
.horizon{
    width:660rpx;
    height: 2rpx;
    background-color: #e5e5e5;
    vertical-align: middle;
    position:relative;
    top:-46rpx;
    margin: 0 auto;
    z-index: 1;
}
.detail{
    color:#666;
    margin-left:20rpx;
    margin-top:20rpx;
    margin-right:30rpx;
    line-height: 44rpx;
    letter-spacing: 2rpx;
    font-size: 24rpx;
}