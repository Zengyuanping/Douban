.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
  }
  .post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
  }
  .post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
  }
  .post-date{
    margin-left: 50rpx;
    vertical-align: middle;
    font-size: 30rpx;
  }
  .post-title{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
  }
  .post-images{
    width: 100%;
    height: 500rpx;
  }
  .post-content{
    color: #666;
    font-size: 30rpx;
    margin-bottom: 24rpx;
    padding: 20rpx;
    box-sizing: border-box;
    line-height: 40rpx;
  }
  .post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
  }
  .post-like-image{
    width: 16px;
    height: 16px;
    margin-right: 10px;
     vertical-align: middle;
  }
  .post-like-font{
    vertical-align: middle;
    margin-right: 20px;
  }