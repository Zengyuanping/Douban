@import "../movie/movie-template.wxss";
.movie-list-container{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.inner-container{
    margin: 0  auto 20rpx;
}
.movie-head{
  padding: 30rpx 20rpx 22rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-between;
}
.more-text{
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
  font-size: 30rpx;
}
.slogan{
  font-size: 24rpx;
}
.more-img {
  width: 16rpx;
  height: 20rpx;
  vertical-align: middle;
}
.movies-container{
    display:flex;
    flex-direction: row;
}
